#!/bin/sh
start(){
	echo "Starting unicgi..."
	rm -rf /var/www
	ln -s /tmp_orig/www /var/www
	echo "unicgi started"
	return 0;
}

stop(){
	rm -rf /var/www
	return 0;
}

status(){
	if [ -f /var/www/home.html ] && [ -f /var/www/cgi-bin/UniCGI.cgi ]; then
		echo "running";
		return 0;
	else
		echo "stopped";
		return 0;
	fi;
}

case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	status)
		status
		;;
	*)
      	echo $"Usage: $0 {start|stop|status}"
		exit 1
esac

exit $?

